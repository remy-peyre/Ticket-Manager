{% extends 'TicketBundle:Default:layout.html.twig' %}

{% block main %}
    <h1>Modifier le message</h1>
    {{ form_start(form) }}
        {{ form_row(form.content, {'value': message.content}) }}
        <div class="center">
            <button class="btn-submit bg-blue btn waves-effect waves-light center" id="_submit" name="_submit">
                Modifier
                <i class="material-icons right">edit</i>
            </button>
        </div>
    {{ form_end(form) }}
{% endblock %}
