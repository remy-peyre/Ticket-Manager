{% extends 'TicketBundle:Default:layout.html.twig' %}

{% block main %}
    <h1>Message</h1>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{% if message.createdAt %}
                        {{ message.createdAt|date('Y-m-d H:i:s') }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ message.content }}</td>
            </tr>
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('ticket_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
