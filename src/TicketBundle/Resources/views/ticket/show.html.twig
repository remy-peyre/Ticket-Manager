{% extends 'TicketBundle:Default:layout.html.twig' %}

{% block main %}
    <h1>Ticket {{ ticket.subject }}</h1>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>
                    {% if ticket.createdAt %}
                        {{ ticket.createdAt|date('Y-m-d H:i:s') }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ ticket.subject }}</td>
            </tr>
            {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN') %}
			<tr>
				<th>Actions</th>
				<td>
					<li>
						<a href="{{ path('ticket_update', { 'id': ticket.id }) }}">
							update
						</a>
					</li>
					<li>
						<a href="{{ path('ticket_delete', { 'id': ticket.id }) }}">
							delete
						</a>
					</li>
				</td>
			</tr>
            {% endif %}
        </tbody>
    </table>
	
	<h1>Messages</h1>
	<a href="{{ path('message_create') }}">
		<button>Cr√©er un message</button>
	</a>
	{% if ticket.messages is not null and ticket.messages is not empty %}
		<table>
			<thead>
				<tr>
					<th>Id</th>
					<th>Created at</th>
					<th>Subject</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for message in ticket.messages %}
					<tr>
						<td>{{ message.id }}</td>
						<td>
							{% if message.createdAt %}
								{{ message.createdAt|date('Y-m-d H:i:s') }}
							{% endif %}
						</td>
						<td>{{ message.content }}</td>
						<td>
							<ul>
								<li>
									<a href="{{ path('message_show', { 'id': message.id }) }}">
										show
									</a>
								</li>
	
								{% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN') %}
									<li>
										<a href="{{ path('message_update', { 'id': message.id }) }}">
											update
										</a>
									</li>
									<li>
										<a href="{{ path('message_delete', { 'id': message.id }) }}">
											delete
										</a>
									</li>
								{% endif %}
							</ul>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>There is no message to display. Please write one!</p>
	{% endif %}
	<ul>
        <li>
            <a href="{{ path('ticket_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
