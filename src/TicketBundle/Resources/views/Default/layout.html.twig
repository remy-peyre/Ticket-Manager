<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0 minimum-scale=0.2">
	<title>{% block title %}Ticket Manager{% endblock %}</title>
	{% block stylesheets %}
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link rel="stylesheet" href="{{ asset('css/main.css') }}" />
	{% endblock %}
</head>
<body>
	{% block navbar %}
		<nav>
			<div class="nav-wrapper bg-blue">
				<ul id="nav-mobile" class="left hide-on-med-and-down">
					<li>
						<i class="material-icons right">account_circle</i>
					</li>
					<li class="username">
						{{ app.user.username }}
					</li>
				</ul>
				<ul class="right hide-on-med-and-down">
					<li>
						<a href="{{ path('ticket_index') }}">Mes tickets</a>
					</li>
					<li>
						<a href="{{ path('ticket_create') }}">Cr√©er un ticket</a>
					</li>
					<li>
						<a href="{{ app.request.getBaseUrl() }}/logout">
							<i class="material-icons">power_settings_new</i>
						</a>
					</li>
				</ul>
			</div>
		</nav>
	{% endblock %}

	<div class="container">
        {% block main %}{% endblock %}
	</div>
	
	{% block javascripts %}
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
		<script>
            $('select').material_select();
		</script>
	{% endblock %}
</body>
</html>