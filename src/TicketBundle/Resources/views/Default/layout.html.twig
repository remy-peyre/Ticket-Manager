<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0 minimum-scale=0.2">
	<title>{% block title %}Ticket Manager{% endblock %}</title>
	{% block stylesheets %}
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
		<link rel="stylesheet" href="{{ asset('css/main.css') }}" />
	{% endblock %}
</head>
<body>
	{% block navbar %}
		<div class="header">
			<div>
				<h4 class="title_nav">TicketList</h4>
			</div>
			<div class="username">
				{{ app.user.username }}
			</div>
			<div class="nav_right">
				<a class="link_navbar" href="{{ path('ticket_create') }}">
					Créer un ticket
				</a>
				<a class="link_navbar" href="{{ app.request.getBaseUrl() }}/logout">
					Déconnexion
				</a>
			</div>
		</div>

	{% endblock %}

	<div class="container">
        {% block main %}
        {% endblock %}
	</div>

	
	{% block javascripts %}
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
		<script>
            $('select').material_select();
		</script>

	{% endblock %}
</body>
</html>